<Page x:Class="GCISApp.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:GCISApp"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LoginPage">
    <Grid>
        <Border BorderBrush="White" BorderThickness="1" HorizontalAlignment="Center" Height="300" VerticalAlignment="Center" Width="300" CornerRadius="10" Background="White">
            <Border.Effect>
                <DropShadowEffect Color="DarkBlue"/>
            </Border.Effect>
            <StackPanel Orientation="Vertical" Width="275" Height="275">
                <Image Source="/GCISApp;component/Images/Logo.png"></Image>
                <Label Content="Usuario" FontWeight="Bold" HorizontalAlignment="Center"></Label>
                <TextBox x:Name="Username" Width="250"></TextBox>
                <Label Content="Password" FontWeight="Bold" HorizontalAlignment="Center"></Label>
                <PasswordBox x:Name="Password" Width="250" KeyUp="Password_KeyUp"></PasswordBox>
                <Label></Label>
                <Button x:Name="LoginBtn" Content="Iniciar sesión" Width="100" Click="LoginBtn_Click"></Button>
            </StackPanel>
        </Border>
    </Grid>
</Page>
